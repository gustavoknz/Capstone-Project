<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/map_balloon_pcd_able"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="This gym is accessible for disable people"
        android:src="@drawable/ic_accessible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:contentDescription="Dislike"
        android:src="@drawable/ic_thumb_down_not_voted"
        app:layout_constraintEnd_toStartOf="@+id/map_balloon_thumb_up"
        app:layout_constraintTop_toTopOf="@+id/map_balloon_thumb_up" />

    <ImageView
        android:id="@+id/map_balloon_thumb_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="Like"
        android:src="@drawable/ic_thumb_up_not_voted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/map_balloon_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ellipsize="end"
        android:maxWidth="200dp"
        android:maxLines="2"
        android:text="Rua do Blah blah, 877"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_balloon_thumb_up" />

    <TextView
        android:id="@+id/map_balloon_equipments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="3 equipments registered"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_balloon_address" />

    <ImageView
        android:id="@+id/map_balloon_voted_thumb_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:contentDescription="Like"
        android:src="@drawable/ic_thumb_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_balloon_equipments" />

    <TextView
        android:id="@+id/map_balloon_voted_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Liked by 7 people"
        app:layout_constraintBottom_toBottomOf="@id/map_balloon_voted_thumb_up"
        app:layout_constraintStart_toEndOf="@id/map_balloon_voted_thumb_up"
        app:layout_constraintTop_toTopOf="@id/map_balloon_voted_thumb_up" />
</android.support.constraint.ConstraintLayout>
